{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "stripInternal": true
  },
  "include": [
    "src/"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"]
  }
}