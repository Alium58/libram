{
  "compilerOptions": {
    "target": "ES2015",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "include": ["src/"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"]
  }
}
